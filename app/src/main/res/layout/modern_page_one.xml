<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/ll_parent"
              android:background="?attr/headerBackground"
              android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8" >

        <library.view.TouchHighlightImageView
            android:clickable="true"
            android:id="@+id/img1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv1"
            android:visibility="gone"
            style="@style/modern_news_page_item" />
    </FrameLayout>

    <LinearLayout
        android:baselineAligned="false"
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="150dp" >

        <FrameLayout
            android:layout_width="0dp"
            style="@style/padding_item_modern_page_left"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <library.view.TouchHighlightImageView
                android:clickable="true"
                android:id="@+id/img2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />


            <TextView
                android:id="@+id/tv2"
                android:visibility="gone"
                style="@style/modern_news_page_item"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            style="@style/padding_item_modern_page_right"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <library.view.TouchHighlightImageView
                android:clickable="true"
                android:visibility="gone"
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/tv3"
                android:visibility="gone"
                style="@style/modern_news_page_item" />
        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:baselineAligned="false"
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="150dp" >
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/padding_item_modern_page_left"
            android:layout_weight="1"
            >

            <library.view.TouchHighlightImageView
                android:clickable="true"
                android:id="@+id/img4"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/tv4"
                android:visibility="gone"
                style="@style/modern_news_page_item" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl_each_cat"
            style="@style/padding_item_modern_page_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <library.view.TouchHighlightImageView
                android:clickable="true"
                android:id="@+id/img5"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/tv5"
                android:visibility="gone"
                style="@style/modern_news_page_item" />
        </FrameLayout>




    </LinearLayout>

</LinearLayout>