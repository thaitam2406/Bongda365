<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/headerBackground"
              android:orientation="vertical" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/padding_item_modern_page_left" >

            <library.view.TouchHighlightImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:visibility="gone"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv1"
                android:visibility="gone"
                style="@style/modern_news_page_item" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/padding_item_modern_page_right" >

            <library.view.TouchHighlightImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:clickable="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv2"
                android:visibility="gone"
                style="@style/modern_news_page_item" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/padding_item_modern_page_left" >

            <library.view.TouchHighlightImageView
                android:id="@+id/img3"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv3"
                android:visibility="gone"
                style="@style/modern_news_page_item" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/padding_item_modern_page_right" >

            <library.view.TouchHighlightImageView
                android:id="@+id/img4"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv4"
                android:visibility="gone"
                style="@style/modern_news_page_item" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/padding_item_modern_page_left" >

            <library.view.TouchHighlightImageView
                android:id="@+id/img5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:visibility="gone"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv5"
                android:visibility="gone"
                style="@style/modern_news_page_item" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/padding_item_modern_page_right" >

            <library.view.TouchHighlightImageView
                android:id="@+id/img6"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv6"
                android:visibility="gone"
                style="@style/modern_news_page_item" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>