<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/parent_ranking"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:background="@drawable/gray_dark_container"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_item"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/tv_time_match"
        android:layout_weight="3.5"
        android:orientation="horizontal">

        <library.view.ImageViewCrop
            android:id="@+id/img_ic_team"
            android:layout_gravity="center_vertical"
            style="@style/item_thumbnail_copy_right"
            />

        <TextView
            android:id="@+id/tv_name_team_pos"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:textStyle="italic|bold"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:text="SunderLand"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_item"/>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        ></View>

    <TextView
        android:id="@+id/tv_number_matched"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="20"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_item"/>

    <TextView
        android:id="@+id/tv_ratio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:text="25"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_item"/>

    <TextView
        android:id="@+id/tv_point"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="25"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_item"/>


</LinearLayout>
