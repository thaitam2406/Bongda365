<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <library.photoView.ImageViewTouch
        android:id="@+id/img_center"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_alignParentTop="true"
        android:background="@color/gray"
        android:id="@+id/tv_hint_photo_view"
        android:layout_width="fill_parent"
        android:alpha="0.4"
        android:text="ljrfjr"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_size_item"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="@color/gray"
        android:padding="10dp"
        android:alpha="0.4"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:background="@drawable/btn_back_header_menu"
            android:layout_margin="10dp"
            android:onClick="onClickBack"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_photo_number"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_alignBottom="@+id/img_back"
            android:textSize="@dimen/text_size_item"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            />
        </RelativeLayout>

</RelativeLayout>
